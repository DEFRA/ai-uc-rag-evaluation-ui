{% extends "common/layout.njk" %}

{% block title %}
  <title>Knowledge groups | {{ serviceName }}</title>
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl">Knowledge groups</h1>

  {% if groups.length %}
    <table class="govuk-table">
      <thead class="govuk-table__head">
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="col">Group ID</th>
          <th class="govuk-table__header" scope="col">Title</th>
          <th class="govuk-table__header" scope="col">Description</th>
          <th class="govuk-table__header" scope="col">Actions</th>
        </tr>
      </thead>
      <tbody class="govuk-table__body">
        {% for group in groups %}
          <tr class="govuk-table__row">
            <td class="govuk-table__cell"><a href="/group/{{ group.groupId }}" class="govuk-link">{{ group.groupId }}</a></td>
            <td class="govuk-table__cell">{{ group.title }}</td>
            <td class="govuk-table__cell">{{ group.description }}</td>
            <td class="govuk-table__cell">
              <a href="/group/{{ group.groupId }}/add_source" class="govuk-button govuk-button--secondary govuk-!-margin-bottom-0">Add source</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p class="govuk-body">No knowledge groups found.</p>
  {% endif %}
{% endblock %}
